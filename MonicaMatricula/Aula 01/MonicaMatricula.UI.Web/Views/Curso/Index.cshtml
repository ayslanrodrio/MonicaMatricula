@model IEnumerable<MonicaMatricula.Dominio.Curso>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Cursos</h2>

<p>
    @Html.ActionLink("Cadastrar Novo", "Cadastrar")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Objetivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CargaHoraria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Objetivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CargaHoraria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.CursoId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.CursoId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.CursoId })
        </td>
    </tr>
}

</table>
