@model MonicaMatricula.Dominio.Professor

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Professor</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Dados do Professor</legend>

        @Html.HiddenFor(model => model.ProfessorId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Habilidades)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Habilidades)
            @Html.ValidationMessageFor(model => model.Habilidades)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Salario)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Salario)
            @Html.ValidationMessageFor(model => model.Salario)
        </div>

        <p>
            <input type="submit" value="Salvar" />
            @Html.ActionLink("Cancelar", "Index")
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
