@model IEnumerable<MonicaMatricula.Dominio.Professor>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Professores</h2>

<p>
    @Html.ActionLink("Cadastrar Novo", "Cadastrar")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Habilidades)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Habilidades)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salario)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.ProfessorId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.ProfessorId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.ProfessorId })
        </td>
    </tr>
}

</table>
